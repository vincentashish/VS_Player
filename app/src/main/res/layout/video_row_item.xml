<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/VideoRowItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:elevation="20dp">

    <ImageView
        android:background="@color/teal_700"
        android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_video_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/video_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:text="10"
        android:gravity="center"
        android:background="@color/teal_200"
        android:layout_margin="4dp"/>
    <TextView
        android:id="@+id/video_title"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/thumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/app_name"
        android:background="@color/white"
        android:padding="3dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="4dp"/>
    <TextView
        android:id="@+id/video_mimeType"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/video_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Type"
        android:background="@color/white"
        android:padding="3dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/video_size"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/video_mimeType"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Size MB"
        android:background="@color/white"
        android:padding="3dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/video_duration"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Duration Mins"
        android:background="@color/white"
        android:padding="3dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>